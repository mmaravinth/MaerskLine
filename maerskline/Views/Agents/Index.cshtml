@model IEnumerable<maerskline.Models.Agent>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr class="success">
        <th>
            @Html.Label("Ship ID")
        </th>
        <th>
            @Html.Label("Ship Name")
        </th>
        <th>
            @Html.Label("Max Weight")
        </th>
        <th>
            @Html.Label("Agent Firstname")
        </th>
        <th>
            @Html.Label("Agent Lastname")
