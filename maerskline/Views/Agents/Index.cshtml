            @Html.DisplayFor(modelItem => item.shipname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.maxweight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.agentFN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.agentLN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.agentEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.agentContact)
        </td>
